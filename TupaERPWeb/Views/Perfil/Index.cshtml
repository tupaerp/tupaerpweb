@using TupaERPWeb.Models.Enums
@using TupaERPWeb.Models.ViewModels
@model PerfilListViewModel
@{
    ViewData["Title"] = "Perfil";
}
<form asp-controller="Perfil" asp-action="index">
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    Cadastro de Perfis
                </div>
                <div class="card-body">
						
							@await Html.PartialAsync("~/Views/Acoes/Mensagens.cshtml")
						
                    <div class="row">
                        <div class="col-md-10">
                            <label asp-for="Descricao" class="form-label">Perfil</label>
                            <input asp-for="Descricao" class="form-control" placeholder="Digite a DESCRIÇÃO" data-val="True" onkeyup="maiuscula(this);" />
                        </div>
							<div class="col-md-2 mt-2">


								<div class="form-group">
									<label asp-for="Status">Status</label>
									<select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-select"></select>

								</div>



							</div>
                       
                    </div>
                        <div class="row mt-2" style="border-bottom:1px #ccc solid;">
							<div id="botoes-acao" class="col-lg-12 mb-3 mt-2">
								<a onclick="chamarIncluir()"  class="btn btn-outline-success float-end me-0"><i class="fa-duotone  fa-circle-plus"></i>Incluir</a>
								<button type="submit"  class="btn btn-outline-primary align-middle float-end me-1"><i class="fa-duotone fa-magnifying-glass"></i>Pesquisar</button>
								<button type="submit"  class="btn btn-outline-secondary align-middle float-end me-1"><i class="fa-duotone fa-download"></i>Baixar</button>
								<a onclick="limparInputs()"  class="btn btn-outline-warning align-middle float-end me-1"><i class="fa-duotone fa-broom"></i>Limpar</a>
							</div>
						</div>
						<div class="row mt-2">
							<div class="col-md-12 table-responsive">
								<partial name="_TabelaPrincipal" model="Model.Perfis" />
							</div>
						</div>
                </div>
                
            </div>
        </div>

    </div>

